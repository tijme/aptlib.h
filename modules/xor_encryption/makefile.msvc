# Defines
COMPILER = cl.exe
INCLUDES = .\src\xor_encryption.c

# Compile, test and clean
all: objects program test

# Compile object
objects:
	$(COMPILER) /LD -c $(INCLUDES) /Fo:xor_encryption.obj

# Compile `test.c`
program:
	$(COMPILER) .\test.c .\xor_encryption.obj /Fe:test.exe

# Test `test.exe`
test:
	.\test.exe

# Clean all build files
clean:
	del /Q *.exe *.a *.o *.obj *.lib *.dll *.pdb
